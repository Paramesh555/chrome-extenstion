{
  "manifest_version": 3,
  "name": "Lock-In Mode",
  "version": "1.0",
  "description": "Interrupts distracting sites with motivational quotes",

  "permissions": ["tabs", "storage", "webNavigation", "alarms"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lock-in-icon.png",
      "48": "lock-in-icon.png"
    },
    "default_title": "Lock-In Mode"
  },

  "icons": {
    "16": "lock-in-icon.png",
    "48": "lock-in-icon.png",
    "128": "lock-in-icon.png"
  }
}
  